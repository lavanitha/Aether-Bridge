# =============================================================================
# AETHERBRIDGE BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aetherbridge
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_AUTH_SOURCE=admin

# PostgreSQL Configuration (Optional)
POSTGRES_URI=postgresql://username:password@localhost:5432/aetherbridge
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aetherbridge
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Hyperledger Fabric Configuration
FABRIC_NETWORK_CONFIG_PATH=./config/network-config.json
FABRIC_WALLET_PATH=./wallet
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=credential-contract
FABRIC_ORG_NAME=Org1
FABRIC_USER_ID=admin

# Ethereum Configuration
ETHEREUM_PROVIDER_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key
NFT_CONTRACT_ADDRESS=your_nft_contract_address
NFT_CONTRACT_ABI_PATH=./contracts/NFTContract.json

# Polygon Configuration (Alternative to Ethereum)
POLYGON_PROVIDER_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_PRIVATE_KEY=your_polygon_private_key

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Azure OpenAI (Alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=AetherBridge <noreply@aetherbridge.com>

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@aetherbridge.com

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aetherbridge-storage
AWS_S3_BUCKET_REGION=us-east-1

# Google Cloud Storage (Alternative)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=aetherbridge-storage
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001/api/v0
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# DID Registry Configuration
DID_REGISTRY_URL=https://did-registry.aetherbridge.com
DID_RESOLVER_URL=https://did-resolver.aetherbridge.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_NAME=aetherbridge-backend
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=aetherbridge
K8S_REPLICAS=3

# Load Balancer Configuration
LOAD_BALANCER_HOSTNAME=api.aetherbridge.com
SSL_CERT_PATH=/etc/ssl/certs/aetherbridge.crt
SSL_KEY_PATH=/etc/ssl/private/aetherbridge.key

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/aetherbridge-test
TEST_ETHEREUM_NETWORK=hardhat
TEST_FABRIC_NETWORK=test-network

# Development Tools
DEBUG=aetherbridge:*
NODEMON_WATCH=src,config USE_IN_MEMORY_STORAGE=true 
USE_DEVELOPMENT_BLOCKCHAIN=true 
USE_DEVELOPMENT_AI=true 
